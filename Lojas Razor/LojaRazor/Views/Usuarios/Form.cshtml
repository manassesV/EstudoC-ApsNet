@model LojaRazor.Models.Usuario

@using (Html.BeginForm("Cadastra", "Usuarios", FormMethod.Post))
{


<fieldset>
	<legend>Dados Pessoais</legend>


	@Html.LabelFor(usuario => usuario.Nome, "Nome")
	@Html.TextBoxFor(usuario => usuario.Nome, new { @type = "text" })
	@Html.ValidationMessageFor(usuario => usuario.Nome)

	@Html.LabelFor(u => u.Email, "Email:")
	@Html.TextBoxFor(u => u.Email, new { @type = "email" })
	@Html.ValidationMessageFor(u => u.Email)

	@Html.LabelFor(u => u.Senha, "Senha:")
	@Html.PasswordFor(u => u.Senha)
	@Html.ValidationMessageFor(u => u.Senha)

	@Html.LabelFor(u => u.DataDeNascimento, "Data de Nascimento:")
	@Html.TextBoxFor(u => u.DataDeNascimento)
	@Html.ValidationMessageFor(u => u.DataDeNascimento)

	<div class="control-group">
		@Html.LabelFor(u => u.Sexo, "Sexo:")
		@Html.Label("Masculino", new { @class = "inline radio" })
		@Html.RadioButtonFor(u => u.Sexo, "Masculino", LojaRazor.Models.Sexo.Masculino)
		@Html.Label("Feminino", new { @class = "inline radio" })
		@Html.RadioButtonFor(u => u.Sexo, "Feminino", LojaRazor.Models.Sexo.Feminino)
		@Html.ValidationMessageFor(u => u.Sexo)
	</div>
	   @Html.LabelFor(u => u.Estado,"Estado:")
	   @Html.DropDownListFor(u => u.Estado,new SelectList(Enum.GetValues(typeof(LojaRazor.Models.Estado))))
       @Html.ValidationMessageFor(u => u.Estado)
</fieldset>

	<fieldset>
		<legend>Dados de Entrega</legend>
		@Html.LabelFor(u => u.Endereco, "Endereço:")
		@Html.TextBoxFor(u => u.Endereco, new {@type = "text" })
		@Html.ValidationMessageFor(u => u.Endereco)

		@Html.LabelFor(u => u.Complemento, "Complemento:")
		@Html.TextBoxFor(u => u.Complemento, new {@type ="text"})
		@Html.ValidationMessageFor(u => u.Complemento)

		@Html.LabelFor(u => u.Observacoes, "Observações")
		@Html.TextBoxFor(u => u.Observacoes)
		@Html.ValidationMessageFor(u => u.Observacoes)
	</fieldset>
	<div>
		@Html.CheckBoxFor(u => u.RecebePromocoes)
		@Html.LabelFor(u => u.RecebePromocoes, "Recebeu Promocões")
	</div>
	   @Html.ActionLink("Save", "Cadastra", null, new { @class = "btn btn-success", @type = "submit"})


}

@section Scripts{
	<script type="text/javascript" src="~/Scripts/jquery-1.7.1.js">
	<script type="text/javas">
	<script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js">
}