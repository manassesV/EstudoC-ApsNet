<div class="hero-unit">
	<h1>Queima de Estoque</h1>
	<p>Monitores com 25%  de desconto no cartão de crédito em 50 vezes sem juros</p>
</div>
<div class="row-fluid">
	@foreach (var produtos in ViewBag.Produtos)
	{
	   <div class="span4">
		  <h2>@produtos.Nome</h2>
		  <p>@produtos.Descricao</p>
		  <p>@produtos.Preco</p>
	   </div>
	}
</div>
	